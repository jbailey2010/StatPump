<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5" 
    tools:context=".Home" >
    

    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="40dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/game_title"
        android:layout_marginRight="-6dp"
        android:src="@drawable/sp_bw_rotate" />
	<ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/game_title" 
        android:layout_marginLeft="-6dp"
        android:src="@drawable/sp_bw_rotate2" />
    <ImageView
        android:id="@+id/game_sport_image"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp" />
    <LinearLayout
        android:id="@+id/statwell"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="230dp" 
        android:orientation="vertical"
        android:background="@drawable/view_well" >
	    
    </LinearLayout>

    <TextView
        android:id="@+id/game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Select a Sport Below"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/odds_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_team1_name_spinner"
        android:layout_centerHorizontal="true"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/game_sport_spinner"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal = "true"
        android:layout_below="@+id/game_title"
        android:layout_marginTop="20dp"
        android:background="@drawable/spinner_well" />

    <Button
        android:id="@+id/game_clear"
        style="@style/ButtonText"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/statwell"
        android:layout_below="@+id/odds_view"
        android:background="@drawable/btn_green"
        android:text="Clear" />

    <Button
        android:id="@+id/game_submit"
        style="@style/ButtonText"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/game_clear"
        android:layout_alignBottom="@+id/game_clear"
        android:layout_alignRight="@+id/statwell"
        android:background="@drawable/btn_blue"
        android:text="Submit" />

    <Spinner
        android:id="@+id/game_team1_name_spinner"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/game_clear"
        android:layout_below="@+id/game_sport_spinner"
        android:layout_marginTop="27dp"
        android:background="@drawable/spinner_well" />

    <Spinner
        android:id="@+id/game_team2_name_spinner"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_above="@+id/odds_view"
        android:layout_alignRight="@+id/game_submit"
        android:background="@drawable/spinner_well" />

</RelativeLayout>