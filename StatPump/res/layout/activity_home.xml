<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5" 
    tools:context=".Home" >

    <ImageView
        android:id="@+id/game_sport_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/statwell"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="205dp" 
        android:orientation="vertical"
        android:background="@drawable/view_well" >
	    
    </LinearLayout>

    <TextView
        android:id="@+id/game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Select a Sport Below"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.example.statpump.InterfaceAugmentation.NDSpinner
        android:id="@+id/game_sport_spinner"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal = "true"
        android:layout_below="@+id/game_title"
        android:layout_marginTop="15dp"
        android:background="@drawable/spinner_well" />

    <com.example.statpump.InterfaceAugmentation.NDSpinner
        android:id="@+id/game_team1_name_spinner"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/game_clear"
        android:layout_below="@+id/game_sport_spinner"
        android:layout_marginTop="20dp"
        android:background="@drawable/spinner_well" />

    <com.example.statpump.InterfaceAugmentation.NDSpinner
        android:id="@+id/game_team2_name_spinner"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/game_team1_name_spinner"
        android:background="@drawable/spinner_well" />

    <Button
        android:id="@+id/game_submit"
        style="@style/ButtonText"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/game_clear"
        android:layout_alignBottom="@+id/game_clear"
        android:layout_alignRight="@+id/game_team2_name_spinner"
        android:background="@drawable/btn_blue"
        android:text="Submit" />

    <Button
        android:id="@+id/game_clear"
        style="@style/ButtonText"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/game_team1_name_spinner"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_green"
        android:text="Clear" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/game_submit"
        android:layout_centerHorizontal="true"
        android:text="Medium Text"
        android:layout_alignTop="@+id/statwell"
        android:visibility="invisible"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>