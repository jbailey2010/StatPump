<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Home"
    android:background="#DEDEDE" >

    <LinearLayout
        android:id="@+id/list_team_parent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="230dp" 
        android:orientation="vertical"
        android:background="@drawable/view_well" >
        
	   <ListView
	        android:id="@+id/list_team"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent" >
	    </ListView>
	    
    </LinearLayout>
    <TextView
        android:id="@+id/team_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Select a Sport Below"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/team_sport_spinner"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/team_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/team_name_spinner"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/team_sport_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/team_clear"
        android:background="@drawable/btn_green"
        style="@style/ButtonText"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/team_submit"
        android:layout_alignBottom="@+id/team_submit"
        android:layout_alignLeft="@+id/team_name_spinner"
        android:text="Clear" />

    <Button
        android:id="@+id/team_submit"
        android:background="@drawable/btn_blue"
        style="@style/ButtonText"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/team_name_spinner"
        android:layout_below="@+id/team_name_spinner"
        android:layout_marginTop="18dp"
        android:text="Set" />
</RelativeLayout>