<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:id="@+id/home_team_base"
    android:background="#DEDEDE" >
    
    
    <ImageView
        android:id="@+id/team_sport_image"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp" />
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="40dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/team_title"
        android:layout_marginRight="-6dp"
        android:src="@drawable/sp_bw_rotate" />
    
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/team_title"
        android:layout_marginLeft="-6dp"
        android:src="@drawable/sp_bw_rotate2" />

    <LinearLayout
        android:id="@+id/statwell"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="230dp" 
        android:orientation="vertical"
        android:background="@drawable/view_well" >
	    
    </LinearLayout>
    <TextView
        android:id="@+id/team_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Select a Sport Below"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/team_name_spinner"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/team_sport_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/spinner_well" />

    <Spinner
        android:id="@+id/team_sport_spinner"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/team_title"
        android:layout_marginTop="19dp"
        android:background="@drawable/spinner_well" />

    <Button
        android:id="@+id/team_clear"
        style="@style/ButtonText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/team_submit"
        android:layout_alignBottom="@+id/team_submit"
        android:layout_alignLeft="@+id/statwell"
        android:background="@drawable/btn_green"
        android:text="Clear" />

    <Button
        android:id="@+id/team_submit"
        style="@style/ButtonText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/statwell"
        android:layout_below="@+id/team_name_spinner"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_blue"
        android:text="Submit" />

</RelativeLayout>