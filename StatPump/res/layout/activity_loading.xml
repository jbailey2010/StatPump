<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Loading" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/view_well" >

        <ImageView
            android:id="@+id/logo_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/sp_full" />
        
	    <ProgressBar
	        android:id="@+id/progressBar1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/sub_header_loading"
	        android:layout_marginTop="30dp"
	        android:layout_centerHorizontal="true"/>

	    <TextView
	        android:id="@+id/sub_header_loading"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/logo_loading"
	        android:layout_centerHorizontal="true"
	        android:paddingBottom="15dp"
	        android:text="Information Systems"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textColor="#191970"
	        android:textSize="20sp"
	        android:textStyle="italic|bold" />


    </RelativeLayout>
 
    <TextView
        android:id="@+id/loading_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Please wait, attempting to contact the server..."
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>