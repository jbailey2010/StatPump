<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="What type of information would you like in the StatWell?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" >

        <RadioButton
            android:id="@+id/statwell_venue_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Venue Information" />

        <RadioButton
            android:id="@+id/statwell_game_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Information" />

        <RadioButton
            android:id="@+id/statwell_game_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Statistics" />
        
         <RadioButton
            android:id="@+id/statwell_game_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Conversation" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statwell_game_cancel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/statwell_game_submit"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_blue"
        android:text="Submit" />

    <Button
        android:id="@+id/statwell_game_cancel"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statwell_game_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_green"
        android:text="Cancel" />

</RelativeLayout>